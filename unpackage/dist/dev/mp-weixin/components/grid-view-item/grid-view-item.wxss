.uni-section .uni-section-header {
  display: none !important;
}
.uni-section .uni-section-content {
  height: 120rpx !important;
}
.uni-section .uni-goods-nav {
  height: 100% !important;
}
.uni-section .uni-tab__cart-box {
  height: 100% !important;
}
.goods-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
  padding-bottom: 10rpx;
}
.goods-item .image {
  width: 100%;
}
.goods-item .desc-info {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.goods-item .desc-info .title {
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 28rpx;
}
.goods-item .desc-info .price {
  color: #ff5777;
}
.goods-item .desc-info .info {
  display: flex;
  align-items: center;
  gap: 10rpx;
  font-size: 26rpx;
}
.goods-item .desc-info .info .cfav-img {
  width: 30rpx;
}