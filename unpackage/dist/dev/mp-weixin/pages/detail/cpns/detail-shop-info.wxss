.uni-section .uni-section-header {
  display: none !important;
}
.uni-section .uni-section-content {
  height: 120rpx !important;
}
.uni-section .uni-goods-nav {
  height: 100% !important;
}
.uni-section .uni-tab__cart-box {
  height: 100% !important;
}
.shop-info-wrapper {
  padding: 40rpx 60rpx 40rpx 20rpx;
  border-bottom: 10rpx solid #f2f2f2;
}
.shop-info-header {
  display: flex;
  align-items: center;
  gap: 10rpx;
}
.shop-info-header .image {
  width: 100rpx;
  border: 2rpx solid #f3f3f3;
  border-radius: 50%;
}
.shop-info-main {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 60rpx;
  margin-top: 40rpx;
}
.shop-info-main .boundary {
  width: 0rpx;
  height: 100rpx;
  border: 2rpx solid #ebebeb;
}
.shop-info-main .desc-left {
  display: flex;
  gap: 60rpx;
}
.shop-info-main .desc-left .gross-sales {
  display: flex;
  align-items: center;
  flex-direction: column;
  gap: 20rpx;
  font-size: 34rpx;
}
.shop-info-main .desc-left .all-goods {
  display: flex;
  align-items: center;
  flex-direction: column;
  gap: 20rpx;
  font-size: 34rpx;
}
.shop-info-main .desc-left .label {
  font-size: 24rpx;
}
.shop-info-main .desc-right {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}
.shop-info-main .desc-right .better {
  color: #f13e3a;
}
.shop-info-main .desc-right .bad {
  color: #78b553;
}
.shop-info-main .desc-right .shop-evaluate {
  display: flex;
  gap: 10rpx;
  font-size: 28rpx;
}
.shop-info-main .desc-right .shop-evaluate .shop-bad {
  color: #fff;
  background-color: #5ea732;
}
.shop-info-main .desc-right .shop-evaluate .shop-better {
  background-color: #f13e3a;
}
.shop-info-bottom {
  margin-top: 30rpx;
}
.shop-info-bottom button {
  width: 350rpx;
  height: 72rpx;
  line-height: 52rpx;
  border-radius: 20rpx;
  padding: 10rpx 60rpx;
  font-size: 28rpx;
  background-color: #f2f5f8;
}