.detail-tab-bar {
  display: flex;
  align-items: center;
  position: -webkit-sticky;
  position: sticky;
  top: 88rpx;
  z-index: 999;
  height: 80rpx;
  background-color: rgba(255, 255, 255, 0.8);
}
.detail-tab-bar .tab-bar-item {
  flex: 1;
  text-align: center;
}
.detail-tab-bar .tab-bar-item .title {
  font-size: 30rpx;
}
.detail-tab-bar .tab-bar-item .title.active {
  font-weight: 700;
  color: #ff8198;
}