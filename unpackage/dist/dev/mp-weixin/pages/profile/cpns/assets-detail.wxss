.uni-section .uni-section-header {
  display: none !important;
}
.uni-section .uni-section-content {
  height: 120rpx !important;
}
.uni-section .uni-goods-nav {
  height: 100% !important;
}
.uni-section .uni-tab__cart-box {
  height: 100% !important;
}
.assets-detail {
  padding: 0 10rpx;
  border-bottom: 30rpx solid #f2f2f2;
}
.assets-list {
  display: flex;
}
.assets-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
  padding: 40rpx 0;
}
.assets-item:nth-child(1) {
  border-right: 2rpx solid #fafafa;
}
.assets-item:nth-child(2) {
  border-right: 2rpx solid #fafafa;
}
.assets-item .assets-balance {
  font-size: 50rpx;
  font-weight: 700;
  color: #ff5f3e;
}