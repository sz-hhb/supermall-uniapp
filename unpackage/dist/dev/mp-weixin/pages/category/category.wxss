.uni-section .uni-section-header {
  display: none !important;
}
.uni-section .uni-section-content {
  height: 120rpx !important;
}
.uni-section .uni-goods-nav {
  height: 100% !important;
}
.uni-section .uni-tab__cart-box {
  height: 100% !important;
}
.category-wrapper {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  overflow: hidden;
}
.category-wrapper .category-detail {
  width: 0;
  padding: 20rpx 20rpx;
  flex: 1;
}
.category-wrapper .category-detail .category-item-list {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  gap: 20rpx;
  width: 100%;
}
.category-wrapper .category-detail .item-scroll-view {
  height: 100%;
}
.category-wrapper .category-detail .recommend-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.category-wrapper .category-detail .recommend-list .recommend-list-item {
  width: 46%;
}